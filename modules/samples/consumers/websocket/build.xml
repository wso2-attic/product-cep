<project default="run">

    <property name="carbon.home" value="../../.."/>
    <property name="src.dir" value="src/main/java"/>
    <property name="resources.dir" value="src/main/resources"/>
    <property name="temp.dir" value="temp"/>
    <property name="class.dir" value="${temp.dir}/classes"/>
    <property name="main-class" value="org.wso2.carbon.sample.websocket.Websocket"/>
    <property name="lib.dir" value="../../lib"/>

    <property name="host" value="localhost"/>
    <property name="port" value="9099"/>
    <property name="url" value=""/>

    <path id="javac.classpath">
        <pathelement path="${class.dir}"/>
        <fileset dir="${lib.dir}">
            <include name="*.jar"/>
        </fileset>
        <fileset dir="${carbon.home}/repository/components/plugins/">
            <include name="org.wso2.carbon.logging_*.jar"/>
        </fileset>
    </path>


    <target name="clean">
        <!--<delete dir="target" quiet="true"/>-->
        <delete dir="${class.dir}" quiet="true"/>
        <delete dir="${temp.dir}"/>
    </target>

    <target name="init">
        <mkdir dir="${temp.dir}"/>
        <mkdir dir="${class.dir}"/>
    </target>

    <target name="compile" depends="init">
        <javac srcdir="${src.dir}" destdir="${class.dir}" compiler="modern">
            <include name="*/**"/>
            <classpath refid="javac.classpath"/>
        </javac>
        <copy todir="${class.dir}" overwrite="true">
            <fileset dir="${resources.dir}">
                <include name="*.properties"/>
            </fileset>
        </copy>
    </target>

    <target name="run" depends="compile">
        <echo>For server mode, configure -Dhost='server host' (optional), -Dport='server port'
            (optional)
        </echo>
        <echo>For client mode, configure -Durl='server url'</echo>
        <java classname="${main-class}" fork="true"
              classpathref="javac.classpath">
            <arg value="${host}"/>
            <arg value="${port}"/>
            <arg value="${url}"/>
        </java>
    </target>

</project>